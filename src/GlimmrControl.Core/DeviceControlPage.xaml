<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GlimmrControl.Core.DeviceControlPage"
             BackgroundColor="#181818"
             xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
             xmlns:core="clr-namespace:GlimmrControl.Core;assembly=GlimmrControl.Core"
             ios:Page.UseSafeArea="true">

    <ContentPage.Content>
        <StackLayout>
            <core:MenuBar x:Name="topMenuBar" />

            <Label x:Name="loadingLabel" Text="Loading..." Font="18" TextColor="#cfcfcf"
                   HorizontalOptions="CenterAndExpand" />

            <WebView x:Name="UIBrowser" WidthRequest="2000" HeightRequest="2000" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>